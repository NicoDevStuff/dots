#
# wm independent hotkeys
#

# program launcher
super + shift + Return
	rofi -terminal kitty -show drun -icon-theme "Papirus" -show-icons

super + shift + e
	rofi -show emoji

super + shift + c
	rofi -show calc

@Print
	ksnip

# XF86MonBrightnessUp
# 	changebrightness up

# XF86MonBrightnessDown
# 	changebrightness down

# media keys
XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# volume keys
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1000

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1000

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle


# Reload sxhkd
super + shift + n
	pkill -USR1 -x sxhkd

# Reload polybar
super + shift + m
	~/.config/polybar/launch_polybar.sh

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {x,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}


super + shift + f
	bspc node focused.tiled -t fullscreen

super + shift + t
	bspc node focused.fullscreen -t tiled

super + ctrl + f
	bspc node focused.tiled -t floating

super + ctrl + t
	bspc node focused.floating -t tiled

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

super + shift + {0-9}
	bspc node -d {0-9} && bspunhide && bspc desktop -f {0-9}

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + Return
	kitty

super + b
	brave
