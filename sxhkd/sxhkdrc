#
# wm independent hotkeys
#

# program launcher
super + Return
	kitty

super + shift + Return
	rofi -show drun

super + e
	rofimoji

super + shift + c
	rofi -show calc

super + Tab
	rofi -show

super + b
	brave

super + s
	signal-desktop

super + f
	pcmanfm

super + shift + e
	thunderbird	

super + space
	~/.config/bspwm/scripts/specialchars.sh

super + mod1 + k
	~/.config/bspwm/scripts/keylayout.sh

@Print
	ksnip

XF86MonBrightnessUp
	brightnessctl set +5%

XF86MonBrightnessDown
	brightnessctl set 5%-

# media keys
XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# volume keys
XF86AudioRaiseVolume
	~/.config/bspwm/scripts/volume.sh up

XF86AudioLowerVolume
	~/.config/bspwm/scripts/volume.sh down

XF86AudioMute
	~/.config/bspwm/scripts/volume.sh down

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Reload sxhkd
super + shift + n
	pkill -USR1 -x sxhkd

# Reload polybar
super + shift + m
	~/.config/polybar/launch_polybar.sh

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {x,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}


super + shift + f
	bspc node focused.tiled -t floating

super + shift + d
	bspc node focused.floating -t tiled

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} focused:'^{1-9}'

super + shift + {1-9}
	bspc node -d {1-9} && bspunhide && bspc desktop -f {0-9}

#
# move/resize
#

# expand a window by moving one of its side outward
super + control + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


